{% set reg= r/^(type|name|section|label)$/i %}

{% macro field(values) %}
{% set id= values.section + '.' + values.name %}

<label for="{{ id }}" {% if values.activation %} data-activation="{{ values.activation }}" {% endif %}>{{ values.label }}</label>
<div class="inputContainer {{"tooltip" if values.tooltip}}" data-tooltip-text="{{ values.tooltip }}" {% if values.activation %} data-activation="{{ values.activation }}" {% endif %}>
    {% if values.type == 'selection' %}
        <select id="{{ id }}" data-section="{{ values.section }}" data-name="{{ values.name }}">
            {% for option in values.options %}
                <option>{{ option }}</option>
            {% endfor %}
        </select>
    {% else %}
        <input id="{{ id }}" type="{{ values.type }}" value=""
               data-section="{{ values.section }}" data-name="{{ values.name }}"/>
    {% endif %}
</div>
{% endmacro %}


{% macro fieldgroup(values) %}
    <label class="inputGroup" {% if values.activation %} data-activation="{{ values.activation }}" {% endif %}>
        <span>{{ values.label }}</span>

        {% for entry in values.entries %}
            {{ field(entry, values) }}
        {% endfor %}
    </label>
{% endmacro %}